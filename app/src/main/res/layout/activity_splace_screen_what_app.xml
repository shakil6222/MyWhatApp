<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FBFAFA"
    android:layout_height="match_parent"
    tools:context=".SplaceScreen_WhatApp">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/whatAppImage_splaceScreen"
        android:src="@drawable/whatapp_image"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/textFrom_splaceScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/whatapp_metaimage"
        android:textColor="#3C3B3B" />
</RelativeLayout>